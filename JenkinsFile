pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }

        stage('Deploy to EC2') {
            steps {
                sshagent (credentials: ['ec2-ssh-key']) {
                    sh '''
                        rsync -avz -e "ssh -o StrictHostKeyChecking=no" ./ ubuntu@<65.2.181.247>:/var/www/html/
                    '''
                }
            }
        }
    }
}

